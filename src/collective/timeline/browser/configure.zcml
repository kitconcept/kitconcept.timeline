<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="collective.timeline">

  <!-- Set overrides folder for Just-a-Bunch-Of-Templates product -->
  <include package="z3c.jbot" file="meta.zcml" />
  <browser:jbot
      directory="overrides"
      layer="collective.timeline.interfaces.ICollectivetimelineCoreLayer"
      />

  <!-- Publish static files -->
  <browser:resourceDirectory
      name="collectivetimeline"
      directory="static"
      />

  <browser:page
      name="view"
      for="collective.timeline.interfaces.ITimeline"
      class="collective.timeline.browser.TimelineView"
      template="timeline.pt"
      permission="zope2.View"
      layer="collective.timeline.interfaces.ICollectivetimelineCoreLayer"
      />

</configure>
